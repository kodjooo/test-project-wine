# URL категории для обхода (см. docs/requirements.md)
CATEGORY_URL=https://winediscovery.ru/katalog/krepkie_napitki/filtr/drinktype-konyak/

# ID Google Sheets (взять из адресной строки таблицы)
GSHEET_ID=YOUR_SHEET_ID

# Название листа внутри Google Sheets
GSHEET_TAB=Products

# Путь к JSON сервисного аккаунта (файл монтируется в контейнер)
GOOGLE_SA_JSON=/secrets/sa.json

# Настройки FreeImage.host для загрузки изображений
FREEIMAGE_API_KEY=your_api_key_here
FREEIMAGE_API_ENDPOINT=https://freeimage.host/api/1/upload
FREEIMAGE_CONNECT_TIMEOUT=15
FREEIMAGE_READ_TIMEOUT=60
FREEIMAGE_MAX_RETRIES=3

# Управление Playwright
HEADLESS=true
REQUEST_DELAY_MS=1200
MAX_CONCURRENCY=3

# Настройки прокси (оставьте пустыми, если не используются)
USE_PROXY=false
HTTP_PROXY=
HTTPS_PROXY=

# Ключ доступа к OpenAI для нормализации
OPENAI_API_KEY=YOUR_OPENAI_KEY

# Имя модели LLM (регулируется при необходимости)
LLM_MODEL=gpt-4o-mini

# Таймауты и повторы (можно подправить под ограничения сайта)
NAVIGATION_TIMEOUT_MS=20000
MAX_RETRIES=3

# Путь к файлу состояния (создаётся автоматически)
STATE_DB_PATH=state/pipeline.db
